
set font "Scientifica 10"

set notification-error-bg       "#000000" # bg
set notification-error-fg       "#df5b61" # bright:red
set notification-warning-bg     "#000000" # bg
set notification-warning-fg     "#de8f78" # bright:yellow
set notification-bg             "#000000" # bg
set notification-fg             "#78b892" # bright:green

set completion-bg               "#000000" # bg2
set completion-fg               "#ffffff" # fg
set completion-group-bg         "#000000" # bg1
set completion-group-fg         "#88909f" # gray
set completion-highlight-bg     "#6791c9" # bright:blue
set completion-highlight-fg     "#000000" # bg2

# Define the color in index mode
set index-bg                    "#000000" # bg2
set index-fg                    "#ffffff" # fg
set index-active-bg             "#6cb6eb" # bright:blue
set index-active-fg             "#31363b" # bg2

set inputbar-bg                 "#000000" # bg
set inputbar-fg                 "#bfddb2" # fg

set statusbar-bg                "#000000" # bg2
set statusbar-fg                "#ffffff" # fg

set highlight-color             "#deb974" # bright:yellow
set highlight-active-color      "#fe8019" # bright:orange

set default-bg                  "#000000" # bg
set default-fg                  "#ffffff" # fg
set render-loading              true
set render-loading-bg           "#000000" # bg
set render-loading-fg           "#ffffff" # fg

# Recolor book content's color
set recolor-lightcolor          "#000000" # bg
set recolor-darkcolor           "#ffffff" # fg
set recolor                     "true"
# set recolor-keephue             true      # keep original color

# Startup options
#
#
set adjust-open width
set recolor true

map <Left> navigate previous
map <Right> navigate next
map <C-=> zoom in
map <C--> zoom out
map B jumplist backward
map b jumplist forward
